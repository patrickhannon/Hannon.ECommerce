@model ECommerce.Models.TwoFactorViewModel
@{
    ViewBag.Title = "TwoFactor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("TwoFactor", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Select Provider for Verification code.</h4>
    <hr />
    <div class="form-group">
        @Html.RadioButton("Provider", "Email")
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        @Html.DisplayTextFor(model => Model.Email)
    </div>
    <div class="form-group">
        @Html.RadioButton("Provider", "CellPhone")
        @Html.LabelFor(m => m.CellPhone, new { @class = "col-md-2 control-label" })
        @Html.DisplayTextFor(model => Model.CellPhone)
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Verify Code" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
